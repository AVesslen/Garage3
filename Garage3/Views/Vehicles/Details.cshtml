@*@model Garage3.Core.Vehicle*@
@model VehicleDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detaljer</h1>

<div>
    <h4>Fordon</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleType.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleModel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleModel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>


        @if (Model.IsParked == true)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ArrivalTime)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IsParked)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IsParked)
        </dd>
        }
        else
        {
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
         </dt>
         <dd class = "col-sm-10">
           <p>-</p>
         </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsParked)
         </dt>
         <dd class = "col-sm-10">
           <p>Nej</p>
         </dd>
        }




        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Member)
        </dt>
    </dl>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Ändra</a> |
    <a asp-action="Index">Tillbaka</a>
</div>
